.nested-fields
  %hr
  .text-right
  .row
    .col-4
      = form.input :user_id, label: "Usuario", as: :select, collection: User.all - [current_user], label_method: -> (u) { u.email }
    .col-4
      = form.input :role, label: "Rol", as: :select, collection: Participant.roles, value_method: -> (r) { r[0] }
    .col-4.text-left
      .mt-2
      = link_to_remove_nested form, link_classes: "btn btn-warning btn-sm btn-flat mt-4", fields_wrapper_selector: ".nested-fields" do
        .fas.fa-trash
